<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
    </div>
    <% if (username){ %>
      <div>
        <form id="logout" method="POST" action="/logout" style="font-size: 1.05em">
          <span>Logged In As: <%=username%></span>
        </form>
      </div>
      <div>
        <button class="btn btn-secondary" form="logout" style="margin-left: 0.7em" >Logout</button>
      </div>
      <% } else{ %>
        <div class="text-right">
          <form id="login" method="POST" action="/login">
            <input placeholder="Username" class = "form-control round" type="text" name="username" style="width: 300px; margin: 0.2em; margin-right: 10px"></input>
          </form>
        </div>
        <div>
          <button class="btn btn-secondary" form="login">Login</button>
        </div>
        <% } %>
      </nav>
      </header>